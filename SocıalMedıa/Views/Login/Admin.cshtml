&nbsp;

@if (Session["Admin"] == null)
{
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">

                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Admin", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group col-md-center">
                            @Html.LabelFor(model => model.username)
                            @Html.TextBoxFor(model => model.username, "", new { @class = "form-control", @placeholder = "Admin Username" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.password)
                            @Html.PasswordFor(model => model.password, new { @class = "form-control", @placeholder = "Admin Password" })
                        </div>
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div>
        @Html.ActionLink("Admin Page", "AdminPage"); //admin zaten giriş yapmış ise, direkt adm
    </div>
}

