<h2>Customer List</h2>
&nbsp;

<div>
    <table class="table">
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Customer Surname
            </th>
            <th>
                Customer E-Mail
            </th>
            <th>
                Customer Phone Number
            </th>
            <th>
                Customer Location
            </th>
        </tr>

        @foreach (var item in Model.Customer_List)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cus_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cus_surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cus_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cus_phonenumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loc_name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCustomer", new { id = item.Cus_id }) |
                    @Html.ActionLink("Delete", "DeleteCustomer", new { id = item.Cus_id })
                </td>
            </tr>
        }

    </table>

</div>

